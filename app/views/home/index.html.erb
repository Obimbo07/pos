<div class="min-h-screen bg-gradient-to-br from-blue-100 to-purple-200">
  <div class="text-center mb-8">
      <%= link_to "Check booked session", bookings_path, class: "bg-purple-500 hover:bg-purple-600 text-white font-bold py-3 px-6 rounded-full shadow-md hover:shadow-xl transition-all duration-300" %>
    </div>
  <div class="container mx-auto p-8">
    <!-- 3D Welcome Animation -->
    <div class="welcome-animation flex flex-col md:flex-row justify-between items-center h-20 mx-auto my-8">
      <div class="text-center md:text-left">
        <img src="/female-doctor.png" alt="Welcome" class="welcome-image w-1/3 md:!w-1/3 transform hover:scale-105 transition-transform duration-500">
        <h2 class="p-4 font-extrabold text-purple-700 text-5xl">Welcome</h2>
        <p class="text-lg text-gray-800 font-semibold">Your Booking ID: <%= session[:user_id] %></p>
      </div>
    </div>
  </div>
    <p class="p-4 text-black font-bold text-xl text-center">Book services below</p>

  <div class="container mx-auto p-8">
    <h1 class="text-4xl font-semibold mb-6 text-center text-purple-800">Services and Inventories</h1>
    <%= form_with url: new_booking_path, method: :get, local: true do %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% @services.each do |service| %>
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300">
            <label class="block cursor-pointer">
              <%= check_box_tag "service_ids[]", service.id, false, class: "form-checkbox h-5 w-5 text-purple-600" %>
              <h2 class="text-2xl font-bold mb-2 inline-block text-purple-700"><%= service.name %></h2>
              <p class="text-gray-600 mb-4"><%= number_to_currency(service.price) %></p>
            </label>
          </div>
        <% end %>
      </div>

      <h2 class="text-3xl font-semibold mt-12 mb-4 text-center text-purple-800">Inventories</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% @inventories.each do |inventory| %>
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300">
            <label class="block cursor-pointer">
              <%= check_box_tag "inventory_ids[]", inventory.id, false, class: "form-checkbox h-5 w-5 text-purple-600" %>
              <h2 class="text-2xl font-bold mb-2 inline-block text-purple-700"><%= inventory.name %></h2>
              <p class="text-gray-600 mb-4"><%= number_to_currency(inventory.price) %></p>
            </label>
          </div>
        <% end %>
      </div>

      <div class="mt-8 text-center">
        <%= submit_tag "Book Selected Items", class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-full shadow-md hover:shadow-xl transition-all duration-300" %>
      </div>
    <% end %>
  </div>
</div>
