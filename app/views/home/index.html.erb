<div class=" min-h-screen">
  <div class="container mx-auto p-4">
    <!-- 3D Welcome Animation -->
    <div class="welcome-animation sm:w-full  flex justify-between items-center h-20 mx-auto my-8">
      <div>
        <h2 class="p-2 font-bold text-yellow-500 text-3xl text-center">Welcome</h2>
        <p class="text-base text-grey text-semibold text-center">Your Booking ID: <%= session[:user_id] %></p>
      </div>
      <img src="/female-doctor.png" alt="Welcome" class="welcome-image w-24 h-24">
    </div>

    <p class="p-2 text-black text-bold text-lg text-center">Book services below</p>
    <div class="text-center">
      <%= link_to "Check booked session", bookings_path, class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded transition-colors duration-300" %>
    </div>
  </div>

  <div class="container mx-auto p-4">
    <h1 class="text-4xl font-semibold mb-6 text-center">Services and Inventories</h1>
    <%= form_with url: new_booking_path, method: :get, local: true do %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        <% @services.each do |service| %>
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <label>
              <%= check_box_tag "service_ids[]", service.id %>
              <h2 class="text-2xl font-bold mb-2 inline-block"><%= service.name %></h2>
              <p class="text-gray-700 mb-4"><%= number_to_currency(service.price) %></p>
            </label>
          </div>
        <% end %>
      </div>
      <h2 class="text-3xl font-semibold mt-6 mb-2 text-center">Inventories</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        <% @inventories.each do |inventory| %>
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <label>
              <%= check_box_tag "inventory_ids[]", inventory.id %>
              <h2 class="text-2xl font-bold mb-2 inline-block"><%= inventory.name %></h2>
              <p class="text-gray-700 mb-4"><%= number_to_currency(inventory.price) %></p>
            </label>
          </div>
        <% end %>
      </div>
      <div class="mt-6 text-center">
        <%= submit_tag "Book Selected Items", class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded transition-colors duration-300" %>
      </div>
    <% end %>
  </div>
</div>
