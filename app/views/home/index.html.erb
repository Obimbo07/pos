<div class="bg-green-400 min-h-screen">
  <div class="sm:container mx-auto p-4">
    <h2 class="p-2 font-bold text-yellow-400 text-3xl">Welcome <p>Session User ID: <%= session[:user_id] %></p> </h2>
    <p class="p-2 text-white text-lg">Please proceed to book our services</p>
    <%= link_to "Check booked session", bookings_path, class: "bg-yellow-500 hover:bg-yellow-200 text-white font-bold p-2 rounded" %>
  </div>

  <div class="sm:container mx-auto p-4">
    <h1 class="text-4xl font-semibold mb-6">Services</h1>
    <%= form_with url: new_booking_path, method: :get, local: true do %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% @services.each do |service| %>
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <label>
              <%= check_box_tag "service_ids[]", service.id %>
              <h2 class="text-2xl font-bold mb-2 inline"><%= service.name %></h2>
              <p class="text-gray-700 mb-4"><%= number_to_currency(service.price) %></p>
            </label>
          </div>
        <% end %>
      </div>
      <div class="mt-6">
        <%= submit_tag "Book Selected Services", class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
