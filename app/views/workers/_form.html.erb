<%= form_with(model: worker) do |form| %>
  <% if worker.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(worker.errors.count, "error") %> prohibited this worker from being saved:</h2>

      <ul>
        <% worker.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.number_field :phone %>
  </div>

  <div class="field">
    <%= form.label :service_id %>
    <%= form.collection_select :service_id, @services, :id, :name, prompt: "Select a Service" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
