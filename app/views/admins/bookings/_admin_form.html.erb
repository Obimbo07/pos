<%= form_for :booking_history, url: admin_booking_histories_path, method: :post do |f| %>
  <div class="inputs">
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </div>

  <div class="inputs">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="inputs">
    <%= f.label :services, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.collection_check_boxes :service_ids, Service.all, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="inputs font-bold">
    <%= f.label :inventories, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.collection_check_boxes :inventory_ids, Inventory.all, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="inputs">
    <%= f.label :workers %>
    <%= f.collection_check_boxes :worker_ids, Worker.all, :id, :name %>
  </div>

  <div class="inputs">
    <%= f.label :is_paid %>
    <%= f.check_box :is_paid %>
  </div>

  <div class="inputs">
    <%= f.label :payment_method %>
    <%= f.select :payment_method, ['Cash', 'Card', 'Mpesa'], include_blank: true %>
  </div>
  
  <div class="actions">
    <%= f.submit "Book Service" %>
  </div>
<% end %>
