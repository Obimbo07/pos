<div class="sm:container mx-auto p-4">
  <h1 class="text-4xl font-semibold mb-6">Confirm Your Booking</h1>
  <%= form_with model: @booking_history, url: bookings_path, local: true do |f| %>
    <%# Send empty array if no services selected %>
    <%= hidden_field_tag "booking[service_ids][]", nil %>
    <% @services.each do |service| %>
      <%= hidden_field_tag "booking[service_ids][]", service.id %>
      <div class="bg-white p-6 rounded-lg shadow-lg mb-4">
        <h2 class="text-2xl font-bold mb-2"><%= service.name %></h2>
        <p class="text-gray-700 mb-4"><%= number_to_currency(service.price) %></p>
      </div>
    <% end %>

    <%# Send empty array if no inventories selected %>
    <%= hidden_field_tag "booking[inventory_ids][]", nil %>
    <% @inventories.each do |inventory| %>
      <%= hidden_field_tag "booking[inventory_ids][]", inventory.id %>
      <div class="bg-white p-6 rounded-lg shadow-lg mb-4">
        <h2 class="text-2xl font-bold mb-2"><%= inventory.name %></h2>
        <p class="text-gray-700 mb-4"><%= number_to_currency(inventory.price) %></p>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :user_name, "Your Name", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :user_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= f.label :phone_number, "Phone Number", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.telephone_field :phone_number, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mt-6">
      <%= f.submit "Confirm Booking", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
