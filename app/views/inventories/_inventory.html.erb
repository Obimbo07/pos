<tr class="border-t">
  <td class="py-3 px-5"><%= inventory.name %></td>
  <td class="py-3 px-5"><%= inventory.price %></td>
  <td class="py-3 px-5"><%= inventory.bought %></td>
  <td class="py-3 px-5"><%= inventory.supplied %></td>
  <td class="py-3 px-5"><%= inventory.supplier_name %></td>
  <td class="py-3 px-5"><%= inventory.in_stock_status %></td>
  <td class="py-3 px-5">
    <%= link_to "Show", inventory, class: "ml-2 rounded-lg py-1 px-3 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit", edit_inventory_path(inventory), class: "ml-2 rounded-lg py-1 px-3 bg-blue-100 text-blue-600 inline-block font-medium" %>
    <%= link_to "Delete", inventory, method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-2 rounded-lg py-1 px-3 bg-red-100 text-red-600 inline-block font-medium" %>
  </td>
</tr>
